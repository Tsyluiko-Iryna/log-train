/*
    main.css uses tokens defined in src/styles/theme.css.
    Color / shadow / radius / typography tokens live in the theme file.

    Typography tokens used from theme:
        - --font-family-base : primary font stack for the app
        - --font-weight-regular / --font-weight-semibold / --font-weight-bold / --font-weight-extrabold

    If you want to tweak visuals, edit src/styles/theme.css (not this file) to preserve layout-only separation.
*/

:root {
        /* Legacy aliases mapped to theme tokens */
        --color-background: var(--color-bg);
    --color-panel: var(--color-surface);
    --color-text-primary: var(--color-text);
    --color-text-secondary: var(--color-text-muted);
    --color-accent-red: var(--accent-red);
    --color-accent-orange: var(--accent-orange);
    --color-accent-yellow: var(--accent-yellow);
    --color-accent-green: var(--accent-green);
    --color-accent-blue: var(--accent-blue);
    --color-accent-indigo: var(--accent-indigo);
    --color-accent-violet: var(--accent-violet);
    --transition-fast: var(--ease-fast);
    --transition-medium: var(--ease-medium);
}

* {
    box-sizing: border-box;
}

html, body {
    margin: 0;
    padding: 0;
    min-height: 100%;
    background: var(--color-background); /* фон сторінки (використовується як безпечний бекграунд під градієнтами) */
    color: var(--color-text-primary); /* основний колір тексту (щоб зробити весь текст чорним змінити --color-text в theme.css) */
    font-family: var(--font-family-base);
    overscroll-behavior: none;
}

body {
    overflow: hidden;
}

.app-root {
    min-height: 100vh;
    position: relative;
}

.no-script {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    background: var(--color-error);
    color: #fff;
    font-weight: 600;
    text-align: center;
}

button {
    cursor: pointer;
    border: none;
    border-radius: var(--btn-radius);
    padding: 0.75rem 1.4rem; /* 12–16 px вертикалі як у гайдлайні */
    font-size: 1.125rem;      /* ≈18 px */
    font-weight: 700;
    background: var(--btn-bg); /* фон кнопок (primary за замовч.) */
    color: var(--btn-color); /* колір тексту кнопок (--btn-primary-color) */
    transition: transform var(--transition-fast), box-shadow var(--transition-fast), background-color var(--transition-fast);
    box-shadow: var(--shadow-soft);
}

button:disabled {
    cursor: not-allowed;
    opacity: var(--btn-disabled-opacity);
    transform: none;
}

button:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
    background: var(--btn-hover-bg);
}

button:active:not(:disabled) {
    transform: translateY(1px);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.12);
}

.link-like {
    background: transparent;
    color: var(--link-color); /* колір лінків / тексту-посилання (--link-color) */
    box-shadow: none;
    padding: 0;
}

.home-scale-wrapper {
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    /* Allow vertical scrolling when content has multiple sections */
    overflow-x: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    /* Теплий «небо → ваніль» градієнт під матовою шкірою */
    background-image: var(--home-bg-gradient);
    background-size: 200% 200%; /* збільшений градієнт для ефекту руху під "матовим" склом */
    animation: bg-drift 28s ease-in-out infinite alternate; /* плавний рух кольорів */
}

@supports (height: 100svh) {
    .home-scale-wrapper {
        min-height: 100svh;
    }
}

.home-container {
    max-width: 1080px;
    width: min(100%, 1080px);
    margin: 0 auto;
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto auto auto auto 1fr auto;
    align-content: start;
    padding: clamp(0.9rem, 2vh, 1.8rem) clamp(1rem, 4vw, 1.6rem) clamp(1.1rem, 2.4vh, 2.2rem);
    gap: clamp(0.75rem, 1.6vh, 1.4rem);
    transform-origin: top center;
    will-change: transform;
    transition: transform 260ms cubic-bezier(0.22, 0.61, 0.36, 1), opacity 160ms ease;
}

.home-header {
    display: flex;
    flex-direction: column;
    /* Reduce vertical spacing around the top title */
    gap: 0.4rem;
    align-items: center;
    text-align: center;
}

.home-header__title {
    /* Slightly smaller main title */
    font-size: clamp(1.7rem, 3.8vw, 2.2rem);
    font-weight: 800;
    letter-spacing: 0.04em;
    color: var(--heading-color); /* головний заголовок: синій #1565C0 (token --heading-color) */
    /* Remove default h1 margins to avoid big gaps above/below */
    margin: 0;
}

.home-header__subtitle {
    max-width: 640px;
    font-size: clamp(0.96rem, 1.8vw, 1.08rem);
    color: var(--color-text-secondary);
    line-height: 1.55;
}

.game-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(0.85rem, 1.8vh, 1.4rem);
    align-items: center;
    background: var(--color-panel); /* фон картки (змінити --color-surface у theme.css) */
    padding: clamp(0.95rem, 2vh, 1.45rem);
    border-radius: var(--radius-3); /* 16px як для панелей */
    box-shadow: var(--shadow-soft); /* єдина м'яка тінь */
    /* Ensure inner visual never spills beyond rounded corners */
    overflow: hidden;
}

.game-card__visual {
    position: relative;
    /* Keep a fixed 4:3 aspect ratio without huge height */
    aspect-ratio: 4 / 3;
    width: 100%;
    border-radius: var(--radius-3);
    overflow: hidden;
    background: var(--promo-visual-gradient);
}

.game-card__visual img {
    position: absolute;
    /* Bleed 1px to avoid subpixel gaps at top/bottom on some DPIs */
    inset: -1px;
    width: calc(100% + 2px);
    height: calc(100% + 2px);
    object-fit: cover;
    object-position: center;
}

@media (min-width: 900px) {
    /* Limit promo visual column width on wide screens to keep image modest */
    .game-card {
        /* First column scales with viewport but is capped */
        grid-template-columns: clamp(220px, 30vw, 360px) 1fr;
    }
}

/* On short heights, reduce the visual aspect to save vertical space */
@media (max-height: 820px) {
    .game-card__visual { aspect-ratio: 16 / 9; }
}
@media (max-height: 640px) {
    .game-card__visual { aspect-ratio: 2 / 1; }
}

.game-card__body {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.game-card__tagline {
    margin: 0;
    font-weight: 800;
    color: var(--accent-text-strong); /* акцентна фраза (помаранчевий #E65100) */
    font-size: clamp(1rem, 1.6vw, 1.1rem);
}

.game-card__title {
    font-size: clamp(1.4rem, 3vw, 1.8rem);
    font-weight: 700;
    margin: 0;
    color: var(--heading-color); /* заголовок картки як h2 */
}

.game-card__description {
    margin: 0;
    color: var(--color-text-secondary);
    line-height: 1.6;
}

.selector-section {
    display: flex;
    flex-direction: column;
    gap: clamp(0.85rem, 1.8vh, 1.2rem);
}

.selector-section__label {
    font-weight: 700;
    color: var(--subheading-color); /* підзаголовки секцій #F57C00 */
    /* Slightly larger selector labels for better readability */
    font-size: clamp(1.06rem, 1.8vw, 1.2rem);
}

.selector-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.selector-grid button {
    background: var(--chip-bg);       /* неактивні — ванільні */
    color: var(--chip-color);
    border: 2px solid var(--chip-border); /* теплий контур */
    box-shadow: none;
    /* Slightly larger buttons text */
    font-size: 1.02rem;
    /* Comfortable touch target */
    min-height: 44px;
    padding: 0.5rem 0.9rem;
}

.selector-grid button.is-active {
    border-color: var(--chip-active-border);
    background: var(--chip-active-bg);
    color: var(--chip-active-color);
}

.home-actions {
    display: flex;
    justify-content: center;
    padding-top: clamp(0.3rem, 1vh, 0.6rem);
}

.home-actions button {
    font-size: 1.06rem;
    padding: 0.72rem 1.5rem;
    white-space: nowrap;
}

.home-summary {
    text-align: center;
    font-size: clamp(0.85rem, 1.4vw, 0.96rem);
    color: var(--color-text-secondary);
    margin: clamp(0.6rem, 1.5vh, 1rem) 0 clamp(0.8rem, 1.7vh, 1.1rem);
    line-height: 1.5;
}

.home-footer {
    text-align: center;
    color: var(--service-text-color); /* службовий текст (автор/рік) */
    font-size: clamp(0.75rem, 1.3vw, 0.88rem);
    padding-top: clamp(0.5rem, 1.3vh, 0.85rem);
}

@media (max-height: 720px) {
    .home-container {
        padding-top: 0.7rem;
        padding-bottom: 1.2rem;
    }

    .home-header__subtitle {
        line-height: 1.4;
    }

    .game-card {
        padding: 0.85rem;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }

    .selector-grid button {
        padding: 0.48rem 0.85rem;
    }
}

@media (max-height: 640px) {
    .home-container {
        grid-template-rows: auto auto auto auto auto auto;
        gap: 0.7rem;
        padding-bottom: 1rem;
    }

    .home-header__title {
        font-size: clamp(1.55rem, 3.2vw, 1.9rem);
    }

    .game-card {
        grid-template-columns: 1fr;
        gap: 0.8rem;
    }

    .selector-grid {
        gap: 0.6rem;
    }

    .home-footer {
        padding-top: 0.6rem;
    }
}

/* Very small phones */
@media (max-width: 420px) {
    .game-toolbar {
        inset: 0.75rem 0.75rem auto;
        padding: 0.6rem 0.8rem;
        gap: 0.6rem;
    }
    .question-panel {
        top: 5.75rem;
        left: 0.75rem;
        width: calc(100% - 1.5rem);
        transform: none;
        padding: 1.1rem 1rem;
    }
    .memory-test {
        left: 0.75rem;
        right: 0.75rem;
        top: 5.25rem;
        bottom: 0.9rem;
        padding: 1rem;
        gap: 1rem;
    }
    .memory-test__grid {
        grid-template-columns: repeat(auto-fit, minmax(104px, 1fr));
        gap: 0.6rem;
    }
    .train-car {
        width: 110px;
        height: 110px;
    }
}

/* Landscape on short screens: compress paddings to keep content visible */
@media (max-height: 520px) and (orientation: landscape) {
    .game-toolbar { inset: 0.5rem 0.6rem auto; padding: 0.5rem 0.7rem; }
    .question-panel { top: 4.8rem; padding: 0.9rem 1rem; }
    .memory-test { top: 4.8rem; bottom: 0.6rem; padding: 0.8rem; }
    .game-footer { right: 0.5rem; bottom: 0.5rem; }
    .train-locked-area { min-height: 180px; padding: 0.6rem 0.8rem; }
}

.loader-overlay {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--overlay-bg); /* фон оверлея-завантаження (opacity/колір в theme.css) */
    backdrop-filter: blur(2px);
    z-index: 40;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-medium);
}

.loader-overlay.is-active {
    opacity: 1;
    pointer-events: all;
}

.loader-box {
    background: var(--color-panel);
    border-radius: var(--radius-3);
    padding: 1.5rem 2.5rem;
    box-shadow: var(--shadow-soft);
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    align-items: center;
}

.loader-spinner {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 4px solid var(--color-muted);
    border-top-color: var(--color-accent-blue);
    animation: spin 1.1s linear infinite;
}

.loader-text {
    font-weight: 600;
    color: var(--color-text-secondary);
}

.loader-progress {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
}

@keyframes spin {
    from { transform: rotate(0); }
    to { transform: rotate(360deg); }
}

/* Плавний рух градієнта, який створює враження кольорів під матовим склом */
@keyframes bg-drift {
    0% { background-position: 0% 0%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 100%; }
}

.game-stage {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: var(--stage-gradient); /* небо → ваніль */
    background-size: 200% 200%;
    animation: bg-drift 36s ease-in-out infinite alternate; /* повільніший рух для сцени */
}

@supports (height: 100svh) {
    .game-stage {
        height: 100svh;
    }
}

.game-toolbar {
    position: absolute;
    inset: 1rem 1.5rem auto;
    display: grid;
    grid-template-columns: max-content 1fr max-content;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1.25rem;
    border-radius: var(--radius-3);
    background: var(--panel-bg-alpha-weak); /* верхня смуга #FFEAC1 */
    box-shadow: var(--shadow-soft);
    z-index: 15;
}

.game-toolbar__action {
    justify-self: stretch;
    /* Prevent wrapping of action labels */
    white-space: nowrap;
}

.game-toolbar__action--back {
    grid-column: 1;
    justify-self: start;
    background: var(--btn-secondary-bg); /* фон кнопки "назад" (--btn-secondary-bg) */
    color: var(--btn-secondary-color); /* колір тексту на кнопці "назад" */
}
.game-toolbar__action--back:hover:not(:disabled) {
    background: var(--btn-secondary-hover-bg);
}

.game-toolbar__action--check {
    grid-column: 3;
    justify-self: end;
}

.game-toolbar__info {
    grid-column: 2;
    justify-self: center;
    text-align: center;
    font-weight: 600;
    color: var(--color-text-secondary);
    /* Let middle cell shrink and ellipsize instead of pushing buttons */
    min-width: 0;
    max-width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.game-stage__message {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 1rem 2rem;
    border-radius: var(--radius-3);
    font-weight: 700;
    letter-spacing: 0.04em;
    z-index: 25;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-fast);
}

.game-stage__message.is-visible {
    opacity: 1;
}

.game-stage__message.is-success {
    background: var(--status-success-bg); /* фон центрального повідомлення успіху (--status-success-bg) */
    color: #ffffff;
}

.game-stage__message.is-error {
    background: var(--status-error-bg);
    color: #ffffff;
}

.train-item {
    position: absolute;
    /* Responsive size that adapts to viewport width while capped */
    width: clamp(104px, 16vw, 160px);
    height: clamp(104px, 16vw, 160px);
    border-radius: var(--radius-4); /* вагончики 18px */
    background: var(--color-panel); /* фон вагончика/елемента (--color-surface / --color-panel) */
    border: 2px solid transparent;
    display: block;
    /* make image fill the whole card; label will overlay on top */
    padding: 0;
    box-shadow: var(--shadow-md);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
    touch-action: none;
    user-select: none;
    z-index: 10;
    overflow: hidden;
    cursor: grab;
}
.train-item--cab .train-item__label {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    /* Bigger, responsive cab letter */
    font-size: clamp(3.4rem, 4rem + 1.6vw, 6.4rem);
    line-height: 1;
}


.train-item__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
}

.train-item__label {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0.5rem;
    margin: 0 0.5rem;
    padding: 0.4rem 0.6rem;
    font-weight: 700;
    text-transform: capitalize;
    letter-spacing: 0.02em;
    color: #ffffff; /* підпис на табличці — білий */
    text-shadow: 0 1px 2px rgba(0,0,0,0.25); /* легка тінь для читабельності */
    text-align: center;
    background: var(--label-ink-gradient);
    border-radius: 8px;
    pointer-events: none;
}
.train-car--cab .train-car__label {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    /* Bigger, responsive cab letter */
    font-size: clamp(3.4rem, 4rem + 1.6vw, 6.4rem);
    line-height: 1;
}
.train-item.is-dragging {
    box-shadow: var(--shadow-elevated);
    z-index: 20;
    cursor: grabbing;
    /* Оптимізуємо композитинг лише під час активного перетягування */
    will-change: transform;
}

/* Останній відпущений елемент/група має лишатися поверх інших вагонів */
.train-item.is-top {
    z-index: 19;
}

.train-item.is-highlighted {
    border-color: var(--color-accent-blue); /* вибір — синій контур */
    box-shadow: 0 0 0 3px rgba(42,133,224,0.25); /* м'яке синє сяйво */
}

.train-item.is-blocked {
    box-shadow: none;
    cursor: default;
}

.train-lock {
    position: absolute;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--lock-bg); /* фон іконки замка (--lock-bg) */
    display: flex;
    align-items: center;
    /* image fills the card, label overlays */
    padding: 0;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast), transform var(--transition-fast);
    overflow: hidden;
    border: none;
    box-shadow: var(--shadow-sm);
    z-index: 21;
}

/* Під час активного перетягування вимикаємо transition у замка, щоб не було «хвоста» */
.game-stage.is-dragging .train-lock {
    transition: none !important;
    /* Оптимізуємо композитинг локально на час drag */
    will-change: transform;
}

.train-lock:hover {
    background: var(--lock-hover-bg);
}

.train-lock:active {
    background: var(--lock-active-bg);
}

.train-locked-area {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    min-height: 220px;
    padding: 1rem 1.5rem;
    background: var(--locked-area-bg); /* фон області блокування (--locked-area-bg) */
    border-top: 1px solid var(--color-border);
    box-shadow: var(--shadow-up-lg);
}

.train-locked-area__label {
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-text-secondary);
}

.train-locked-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: flex-end;
}

.train-car {
    position: relative;
    /* Responsive size to adapt to narrow windows */
    width: clamp(96px, 14vw, 140px);
    height: clamp(96px, 14vw, 140px);
    aspect-ratio: 1 / 1;
    border-radius: var(--radius-3);
    background: var(--color-panel);
    box-shadow: var(--shadow-lg);
    border: 2px solid transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    /* image fills the card, label overlays */
    padding: 0;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast), transform var(--transition-fast);
}

.train-car__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.train-car__label {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0.4rem;
    margin: 0 0.5rem;
    padding: 0.35rem 0.6rem;
    font-weight: 700;
    text-transform: capitalize;
    color: #ffffff;
    text-shadow: 0 1px 2px rgba(0,0,0,0.25);
    text-align: center;
    background: var(--label-ink-gradient);
    border-radius: 8px;
    pointer-events: none;
}

.train-car--interactive {
    cursor: pointer;
}

.train-car--interactive:hover {
    border-color: var(--color-accent-blue);
    transform: translateY(-2px);
}

.train-car.is-correct {
    border-color: var(--color-success);
    box-shadow: var(--shadow-success-lg);
}

.train-car.is-error {
    border-color: var(--color-error);
    box-shadow: var(--shadow-error-lg);
}

.question-panel {
    position: absolute;
    top: 5.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: min(720px, calc(100% - 3rem));
    background: var(--panel-bg-alpha);
    padding: 1.75rem 2rem;
    border-radius: var(--radius-3);
    box-shadow: var(--shadow-soft);
    z-index: 14;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.question-panel.is-success {
    border: 2px solid var(--color-success);
}

.question-panel.is-error {
    border: 2px solid var(--color-error);
}

.question-panel__title {
    font-weight: 700;
    margin: 0;
    font-size: 1.35rem;
    color: var(--heading-color); /* заголовок у вікні питань */
}

.question-panel__progress {
    color: var(--color-text-secondary);
    font-size: 1rem;
}

.memory-test {
    position: absolute;
    left: 1.5rem;
    right: 1.5rem;
    top: 5.5rem;
    bottom: 1.5rem;
    background: var(--panel-bg-alpha-93);
    border-radius: var(--radius-3);
    box-shadow: var(--shadow-soft);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    z-index: 14;
}

.memory-test__title {
    margin: 0;
    font-weight: 700;
    color: var(--heading-color); /* заголовок у memory-test */
}

.memory-test__grid {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 1rem;
    overflow-y: auto;
    padding-right: 0.25rem;
}

.memory-test__card {
    position: relative;
    background: var(--color-panel);
    border-radius: 16px;
    border: 2px solid transparent;
    /* remove internal padding so image can fill the box */
    padding: 0;
    display: block;
    cursor: pointer;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
    aspect-ratio: 1 / 1;
    overflow: hidden;
}

.memory-test__card-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-fast);
}

.memory-test__card-label {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0.45rem;
    margin: 0 0.5rem;
    padding: 0.4rem 0.6rem;
    text-align: center;
    font-weight: 600;
    font-size: 0.95rem;
    color: #ffffff;
    text-shadow: 0 1px 2px rgba(0,0,0,0.25);
    line-height: 1.15;
    word-break: break-word;
    background: var(--label-ink-gradient);
    border-radius: 8px;
    pointer-events: none;
}

.memory-test__card:hover .memory-test__card-image {
    transform: scale(1.05);
}

.memory-test__card.is-active {
    border-color: var(--color-accent-blue);
    box-shadow: var(--shadow-card-active);
}

.memory-test__feedback {
    min-height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 14px;
    background: var(--ink-overlay-weak);
    color: var(--color-text-secondary);
    font-weight: 600;
}

.memory-test__feedback.is-success {
    background: var(--success-weak);
    color: var(--color-success);
}

.memory-test__feedback.is-error {
    background: var(--error-weak);
    color: var(--color-error);
}

.final-screen {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    background: var(--panel-bg-alpha);
    z-index: 50;
    text-align: center;
    padding: 2rem;
}

.final-screen__title {
    font-size: 2rem;
    font-weight: 800;
    margin: 0;
    color: var(--color-text-primary);
}

.final-screen__actions button {
    font-size: 1.15rem;
    padding: 0.9rem 2.5rem;
    white-space: nowrap;
}

.game-footer {
    position: absolute;
    right: 1rem;
    bottom: 1rem;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.6rem;
    z-index: 16;
}

.game-author-tag {
    padding: 0.35rem 0.75rem;
    border-radius: var(--radius-2);
    background: var(--ink-overlay-05);
    color: var(--service-text-color); /* службовий невідволікаючий текст */
    font-size: 0.85rem;
    font-weight: 600;
    backdrop-filter: blur(6px);
}

/* Видимий фокус: синій кільцевий підсвіт 3px для клавіатури */
button:focus-visible,
.selector-grid button:focus-visible,
.memory-test__card:focus-visible,
.train-car:focus-visible,
.train-item:focus-visible {
    outline: 3px solid var(--accent-blue);
    outline-offset: 2px;
}

@media (max-width: 768px) {
    .game-toolbar {
        inset: 1rem 1rem auto;
        grid-template-columns: 1fr;
        justify-items: stretch;
        row-gap: 0.75rem;
    }

    .game-toolbar__action--back,
    .game-toolbar__action--check {
        justify-self: stretch;
    }

    .game-toolbar__info {
        grid-column: 1;
        justify-self: center;
        font-size: 0.9rem;
    }

    .question-panel {
        top: 6.25rem;
        left: 1rem;
        transform: none;
        width: calc(100% - 2rem);
        padding: 1.35rem 1.25rem;
    }

    .game-footer {
        right: 0.75rem;
        bottom: 0.75rem;
        gap: 0.45rem;
    }

    .memory-test__grid {
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 0.75rem;
    }

    .memory-test__card {
        padding: 0.6rem;
    }

    /* Sizes now handled by clamp above; keep media query for legacy overrides if any */


/* Extra compression for narrow side-docked windows */
@media (max-width: 640px) {
    .game-toolbar {
        inset: 0.75rem 0.75rem auto;
        padding: 0.6rem 0.75rem;
        gap: 0.6rem;
    }
    .question-panel {
        top: 5.2rem;
        left: 0.75rem;
        width: calc(100% - 1.5rem);
        padding: 1rem 1rem;
    }
    .memory-test {
        left: 0.75rem;
        right: 0.75rem;
        top: 5.2rem;
        bottom: 0.8rem;
        padding: 0.9rem;
        gap: 0.9rem;
    }
    .memory-test__grid {
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 0.6rem;
    }
    .train-locked-area {
        min-height: 180px;
        padding: 0.6rem 0.75rem;
    }
}
    .train-locked-area {
        min-height: 200px;
        padding: 0.85rem 1rem;
    }
}
